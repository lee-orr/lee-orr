---
const { area } = Astro.props as {
  area: "storytelling" | "computing";
};
---

<div class="flex flex-col w-screen p-20 h-full items-stretch justify-start">
  <form class="flex flex-col justify-center items-stretch gap-2">
    <div class="p-2 w-full grid-cols-4 grid">
      <label
        class="col-start-1 col-span-1 font-bold text-text text-xl self-start"
        >Name</label
      >
      <input class="col-start-2 col-span-3 rounded text-xl p-2 self-center" />
    </div>
    <div class="p-2 w-full grid-cols-4 grid">
      <label
        class="col-start-1 col-span-1 font-bold text-text text-xl self-start"
        >Email</label
      >
      <input class="col-start-2 col-span-3 rounded text-xl p-2 self-center" />
    </div>
    <div class="p-2 w-full grid-cols-4 grid">
      <label
        class="col-start-1 col-span-1 font-bold text-text text-xl self-start"
        >Subject</label
      >
      <input class="col-start-2 col-span-3 rounded text-xl p-2 self-center" />
    </div>
    <div class="p-2 w-full grid-cols-4 grid flex-grow">
      <label
        class="col-start-1 col-span-1 font-bold text-text text-xl self-start"
        >Content</label
      >
      <textarea
        class="col-start-2 col-span-3 rounded text-xl p-2 self-center flex-grow min-h-[30vh]"
      ></textarea>
    </div>
    <div class="p-2 self-end">
      <button
        class="p-3 bg-accent rounded text-text-100 font-bold hover:bg-accent-600"
        >Send</button
      >
    </div>
  </form>
</div>
