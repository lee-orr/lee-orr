---
const { title, timespan, description } = Astro.props as {
    title?: string, timespan?: string, description: string
};
---

<div class="flex flex-row gap-2 items-center">
    {title ? (<h5 class="font-bold text-left pl-11 flex flex-row gap-2">{title}{timespan ? (<span class="font-normal text-xs italic">{timespan}</span>) : (<></>)}</h5>) : (<span class="rounded-full w-1 h-1 bg-black"></span>)}
    <span>{description}</span>    
</div>