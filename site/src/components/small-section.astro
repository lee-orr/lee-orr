---
const { title, timespan, description } = Astro.props as {
    title?: string, timespan?: string, description: string
};
---

<div class="small">
    {title ? (<h5 class="title"><span>{title}</span></h5>) : (<></>)}
    {timespan ? (<h5 class="timespan">&nbsp;{timespan}</h5>) : (<></>)}
    <span class="description">{description}</span>    
</div>

<style>
    .small {
        display: grid;
        grid-auto-rows: auto;
        grid-template-columns: subgrid;
        grid-column: 1 /span 2;
    }

    h5 {
        font-size: 1em;
        font-weight: 900;
        display: flex;
        gap: 1em;
    }

    .title {
        grid-column: 1 / span 1;
        flex-direction: row;
    }



    .timespan {
        grid-column: 2 / span 1;
        display: flex;
        flex-direction: row-reverse;
    }


    div {
        font-weight: 100;
        font-size: 1em;
    }

    .description {
        display: block;
        padding-left: 1em;
        grid-column: 1 / span 2;
    }
</style>