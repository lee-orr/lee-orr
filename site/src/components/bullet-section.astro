---
const { title, timespan, description } = Astro.props as {
    title?: string, timespan?: string, description: string
};
---

<div class="bullets">
    <h5 class="title">{title}</h5>
    {timespan ? (<h5 class="timespan">{timespan}</h5>) : (<></>)}
    <span class="description">{description}</span>    
</div>
<style>

    .bullets {
        display: grid;
        grid-template-rows: auto;
        grid-template-columns: subgrid;
        grid-column: 1 / span 2;
    }
    
    h5 {
        font-size: 1em;
        font-weight: 900;
        grid-column: 1 /span 1;
        padding-right: 0.5em;
    }

    .timespan {
        grid-column: 2 / span 1;
        display: flex;
        flex-direction: row-reverse;
    }

    div {
        font-weight: 100;
        font-size: 1em;

    }
    .description {
        grid-column: 2 / span 1;
    }
</style>