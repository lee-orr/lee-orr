---
const { title, timespan, description } = Astro.props as {
    title?: string, timespan?: string, description: string
};
---

<div class="flex flex-row gap-2 items-start">
    {title ? (<h5 class="font-bold text-left pl-11 flex flex-row gap-2 items-center">{title}{timespan ? (<span class="font-normal text-xs italic items-center">{timespan}</span>) : (<></>)}</h5>) : (<span class="pl-11">-</span>)}
    <span>{description}</span>    
</div>