---
import Html from "../components/html.astro";
import { storytelling, computing } from "../data/site-nav-data.json";
import CreativeBg from "../images/wide-site-bg-test-creative.png";
import ComputingBg from "../images/wide-site-bg-test-computing.png";
---

<Html>
  <body>
      <hgroup
        class="title xl"
      >
        <h1 class="storytelling">
          Lee
        </h1>
        <h1>-</h1>
        <h1 class="computing">Orr</h1>
      </hgroup>


      <a
        class="storytelling lg"
        href="/storytelling"
      >
        <h2 class="">
          Storytelling
        </h2>
      </a>
      <a
        class="computing lg"
        href="/computing"
      >
        <h2 class="">
          Computing
        </h2>
      </a>

      <div
        class="bg-storytelling"
      >
    </div>
      <div
        class="bg-computing"
      >
      </div>

      <footer>
        <span>
          {
            storytelling.socials.filter(({type}) => type != "email").map(({type, value, icon}) => (<a href={value} target="_blank"><i class={icon}></i><span>{type}</span></a>))
          }
        </span>
        <span>
          {
            computing.socials.map(({type, value, icon}) => (<a href={value} target="_blank"><i class={icon}></i><span>{type}</span></a>))
          }
        </span>
      </footer>
  </body></Html>

<style>
body {
  width: 100dvw;
  height: 100dvh;
  display: flex;
  flex-direction: row;
  align-items: stretch;
  justify-content: stretch;
  position: relative;
}

a {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  flex-grow: 1;
  flex-shrink: 0;
  color: var(--color-main-text);
  text-decoration: none;
  margin: 2rem;

  &:hover, &:focus, &:focus-within, &:active {
    text-decoration: underline 0.2em solid;
    text-underline-offset: 0.2em;



    &.storytelling {
      ~ .bg-storytelling {
        clip-path: polygon(0 0, 0 100%, 60% 100%, 60% 0);

        filter: grayscale(0);
      }
      ~ .bg-computing{
        clip-path: polygon(100% 0, 100% 100%, 60% 100%, 60% 0);
        filter: grayscale(1);
      }
    }

    &.computing {
      ~ .bg-storytelling {
        clip-path: polygon(0 0, 0 100%, 40% 100%, 40% 0);

        filter: grayscale(1);
      }
      ~ .bg-computing{
        clip-path: polygon(100% 0, 100% 100%, 40% 100%, 40% 0);

        filter: grayscale(0);
      }
    }
  }
}

.bg-storytelling, .bg-computing {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    transition: filter 0.5s;
    transition: clip-path 0.5s;
    background-size: cover;
    background-position: center;
    pointer-events: none;
    z-index: -1;
}

.bg-storytelling {
  background-image: url(../images/wide-site-bg-test-creative.png);
  clip-path: polygon(0 0, 0 100%, 50% 100%, 50% 0);
}

.bg-computing {
  background-image: url(../images/wide-site-bg-test-computing.png);
  clip-path: polygon(100% 0, 100% 100%, 50% 100%, 50% 0);
}

.title {
  position: absolute;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: flex-end;
  width: 100dvw;
  height: 100dvh;
  z-index: 10;
  pointer-events: none;
  padding: 2rem;
}

footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  pointer-events: none;

  span {
    pointer-events: all;
    display: flex;
    flex-direction: row;
    a:hover {
      text-decoration: none;
      span {
        text-decoration: underline 0.1em;
        text-underline-offset: 0.5em;
      }
    }
  }
}

@media (max-width: 700px) {
  body {
    flex-direction: column;
  }  
   

  .bg-storytelling {
    clip-path: polygon(0 0, 100% 0%, 100% 50%, 0% 50%);
  }

  .bg-computing {
    clip-path: polygon(0 100%, 100% 100%, 100% 50%, 0% 50%);
  }
  a {
    padding: 2em;
    text-decoration: underline 0.1em;
    text-underline-offset: 0.5em;

    &:last-of-type {
      flex-direction: column-reverse;
    }

    &:hover, &:focus, &:focus-within, &:active {
      
      &.storytelling {
        ~ div.bg-storytelling {
          clip-path: polygon(0 0, 100% 0%, 100% 60%, 0% 60%);

          filter: grayscale(0);
        }
        ~ div.bg-computing{
          clip-path: polygon(0 100%, 100% 100%, 100% 60%, 0% 60%);
          filter: grayscale(1);
        }
      }

      &.computing {
        ~ .bg-storytelling {
          clip-path: polygon(0 0, 100% 0%, 100% 40%, 0% 40%);

          filter: grayscale(1);
        }
        ~ .bg-computing{
          clip-path: polygon(0 100%, 100% 100%, 100% 40%, 0% 40%);

          filter: grayscale(0);
        }
      }
    }

  }



  footer {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    top: 0;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    font-size: 0.8em;

    span {
      display: flex;
      flex-direction: row;
      gap: 1em;
      a {
        padding: 0.2em;
        text-decoration: none;
        span {
          display: none;
        }
      }
      a:hover {
        text-decoration: none;
        span {
          text-decoration: underline 0.1em;
          text-underline-offset: 0.5em;
        }
      }
    }
  }

  .title {
    justify-content: center;
    align-items: center;
  }
}
</style>